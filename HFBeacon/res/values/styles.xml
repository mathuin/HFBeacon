<resources>
	<style name="hfbeaconTheme" parent="android:Theme.Black">
		<item name="android:windowNoTitle">true</item>
	</style>
	<style name="labelTextViewStyle">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">18sp</item>
	</style>
	<style name="valueTextViewStyle">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">18sp</item>
	</style>
	<style name="DigitalClockStyle">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">18sp</item>
	</style>
	<style name="SpinnerStyle">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">18sp</item>
	</style>
	<style name="activityLinearLayoutStyle">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:orientation">vertical</item>
	</style>
	<style name="tophalfLinearLayoutStyle">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:orientation">horizontal</item>
		<item name="android:layout_weight">1</item>
	</style>
	<style name="bottomhalfLinearLayoutStyle">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:orientation">horizontal</item>
		<item name="android:layout_weight">1</item>
	</style>
	<style name="bandclocklocLinearLayoutStyle">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:orientation">vertical</item>
		<item name="android:layout_weight">1</item>
	</style>
	<style name="beaconLinearLayoutStyle">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:orientation">vertical</item>
		<item name="android:layout_weight">1</item>
	</style>
</resources>